require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "blist"
    gemspec.summary = "An OAuth driven authentication mechanism based on membership in a Twitter list"
    gemspec.description = %{
      B-List is a Rack middleware that makes it easy to authenticate users based on membership in a Twitter list
    }
    gemspec.email = "flip@x451.com"
    gemspec.homepage = "http://github.com/flipsasser/blist"
    gemspec.authors = ["Bmore on Rails"]
  end
rescue LoadError
end